@using MAS_Sustainability.Models;
@model MainModel

@{
    Layout = "~/Views/Home/LayoutBody.cshtml";
}
@{
    ViewBag.Title = "TokenUpdate";
}



<div class="main-panel">
    @foreach (var TokenInformation in Model.ListToken)
    {
        <div class="content">
            <div class="page-inner">

                <div class="page-header">
                    <h4 class="page-title">Lists</h4>
                    <ul class="breadcrumbs">
                        <li class="nav-home">
                            <a href="#">
                                <i class="flaticon-home"></i>
                            </a>
                        </li>
                        <li class="separator">
                            <i class="flaticon-right-arrow"></i>
                        </li>
                        <li class="nav-item">
                            <a href="#">Base</a>
                        </li>
                        <li class="separator">
                            <i class="flaticon-right-arrow"></i>
                        </li>
                        <li class="nav-item">
                            <a href="#">Lists</a>
                        </li>
                    </ul>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Capture the Problem</h4>



                                @using (Html.BeginForm("DoUpdateProcessInDetail", "Token", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()


                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-3">

                                            </div>
                                            <div class="col-md-3">
                                                <div class="input-file input-file-image">
                                                    <img class="img-upload-preview img-circle" width="100" height="100" src="@Url.Content(Model.FirstImagePath)" alt="preview">
                                                    <input type="file" class="form-control form-control-file" id="ImageFile1" name="FirstImageFile" accept="image/*" required="">
                                                    <label for="ImageFile1" class="badge badge-primary">
                                                        <span class="btn-label">
                                                            <i class="fa fa-file-image"></i>
                                                        </span>
                                                        Add New
                                                    </label>
                                                </div>
                                            </div>




                                            <div class="col-md-3">
                                                <div class="input-file input-file-image">
                                                    <img class="img-upload-preview img-circle" width="100" height="100" src="@Url.Content(Model.SecondImagePath)" alt="preview">
                                                    <input type="file" class="form-control form-control-file" id="ImageFile2" name="SecondImageFile" accept="image/*">
                                                    <label for="ImageFile2" class="badge badge-primary">
                                                        <span class="btn-label">
                                                            <i class="fa fa-file-image"></i>
                                                        </span>
                                                        Add New
                                                    </label>
                                                </div>
                                            </div>




                                        </div>
                                    </div>





                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h4 class="card-title">More Information about Problem</h4>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Problem Name</label>
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" id="ProblemName" name="ProblemName" value="@TokenInformation.ProblemName" placeholder="@TokenInformation.ProblemName">

                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Attention Level</label>
                                                                <div class="input-group">
                                                                    <input type="number" class="form-control" id="AttentionLevel" name="AttentionLevel" value="@TokenInformation.AttentionLevel">
                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Problem Category</label>
                                                                <div class="input-group">

                                                                    <select id="basic" name="ProblemCategory" class="form-control">
                                                                        <option value="@TokenInformation.ProblemCategory">@TokenInformation.ProblemCategory</option>
                                                                        <option value="Sustainability">Sustainability</option>
                                                                        <option value="Safety">Safety</option>

                                                                    </select>

                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label>Location</label>
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" id="Location" name="Location"  value="@TokenInformation.Location">
                                                                </div>
                                                            </div>
                                                        </div>



                                                    </div>

                                                    <input type="hidden" value="@TokenInformation.TokenAuditID" id="TokenAuditID" name="TokenAuditID">


                                                    <div class="form-group">
                                                        <label for="comment">Problem in Brief</label>
                                                        <textarea class="form-control" id="comment" rows="5" name="Description">
                                                            @TokenInformation.Description
										                </textarea>
                                                    </div>

                                                    <center>
                                                       
                                                        <input type="submit" value="UPDATE TOKEN" class="btn btn-success" />
                                                    </center>








                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                            
                        </div>
    }
    </div>

