@using MAS_Sustainability.Models
@model MainModel
@{
    ViewBag.Title = "View Report";
    Layout = "~/Views/Home/LayoutBody.cshtml";

}
<div class="main-panel">
    <div class="content">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div id="basic-datatables_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <div class="row">
                            <div class="col-12 col-md-7">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title">&nbsp</div>
                                    </div>
                                    <div class="card-body">
                                        <table class="table mt-3" id="ReportTable">

                                            <thead hidden>
                                                <tr>
                                                    <th width="94px"> </th>
                                                </tr>
                                            </thead>
                                            <tr>
                                                <td>@Html.DisplayNameFor(m => m.survey.ProblemName)</td>
                                                <td>@Html.DisplayFor(m => m.survey.ProblemName)</td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(m => m.survey.Description) </td>
                                                <td>@Html.DisplayFor(m => m.survey.Description) </td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(m => m.survey.Location) </td>
                                                <td>@Html.DisplayFor(m => m.survey.Location) </td>
                                            </tr>
                                            <tr>
                                                <td>@Html.DisplayNameFor(m => m.survey.AddedDate) </td>
                                                <td>@Html.DisplayFor(m => m.survey.AddedDate) </td>
                                            </tr>
                                            <tr>
                                                <div class="row image-gallery">
                                                    <label class="form-label" style="margin:20px 60px 0px 20px">Before</label>
                                                    <a href="@Url.Content(Model.survey.Image1path)" class="col-6 col-md-3 mb-4">
                                                        <img src="@Url.Content(Model.survey.Image1path)" class="img-fluid">
                                                    </a>
                                                </div>

                                                <div class="row image-gallery">
                                                    <label class="form-label" style="margin:20px 60px 0px 20px">After&nbsp;&nbsp;&nbsp;</label>
                                                    <a href="@Url.Content(Model.survey.Image2path)" class="col-6 col-md-3 mb-4">
                                                        <img src="@Url.Content(Model.survey.Image2path)" class="img-fluid">
                                                    </a>
                                                </div>
                                            </tr>

                                        </table>
                                    </div>

                                </div>
                            </div>

                            <div class=" col-12 col-md-5">
                                <div class="card">
                                    <div class="card-header">
                                        <div class="card-title">User Survey For @Html.DisplayFor(m => m.survey.ProblemName)</div>
                                    </div>
                                    <table class="table mt-3" id="ReportTable">
                                        <tr>
                                            <div class="form-group" style="margin-left:50px">
                                                <label class="form-label d-block">Rating</label>
                                                <div class="selectgroup selectgroup-secondary selectgroup-pills">
                                                    <label class="selectgroup-item">
                                                        <input type="radio" name="icon-input" value="1" class="selectgroup-input" checked="">
                                                        <span class="selectgroup-button selectgroup-button-icon">1</span>
                                                    </label>
                                                    <label class="selectgroup-item">
                                                        <input type="radio" name="icon-input" value="2" class="selectgroup-input">
                                                        <span class="selectgroup-button selectgroup-button-icon">2</span>
                                                    </label>
                                                    <label class="selectgroup-item">
                                                        <input type="radio" name="icon-input" value="3" class="selectgroup-input">
                                                        <span class="selectgroup-button selectgroup-button-icon">3</span>
                                                    </label>
                                                    <label class="selectgroup-item">
                                                        <input type="radio" name="icon-input" value="4" class="selectgroup-input">
                                                        <span class="selectgroup-button selectgroup-button-icon">4</i></span>
                                                    </label>
                                                    <label class="selectgroup-item">
                                                        <input type="radio" name="icon-input" value="5" class="selectgroup-input">
                                                        <span class="selectgroup-button selectgroup-button-icon">5</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label for="comment">Comment</label>
                                                    <textarea class="form-control" id="comment" rows="5" placeholder="@Html.DisplayFor(m => m.survey.comment)">

												    </textarea>
                                                </div>
                                            </td>
                                        </tr>

                                    </table>
                                    <table class="table mt-3" id="ReportTable">
                                        <tr>
                                            <div class="card-action">
                                                <form>
                                                    <input type="submit" formaction=@Url.Action("SubmitSurvey") formmethod="post" class="btn btn-success btn-sm" value="Submit" style="font-size:14px" />
                                                    <input type="reset" class="btn btn-danger btn-sm" value="Cancel" style="font-size:14px" />
                                                </form>
                                            </div>

                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



